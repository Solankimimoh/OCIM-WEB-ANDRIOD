<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/row_layout_medicine_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="center"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/row_layout_medicine_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/row_layout_medicine_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="@tools:sample/lorem" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="20dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/row_layout_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/icon_user"
            android:drawablePadding="5dp"
            android:padding="15dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/icon_email"
            android:id="@+id/row_layout_medicine_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/icon_mobile"
            android:id="@+id/row_layout_medicine_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/row_layout_medicine_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/icon_address"
            android:padding="15dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="@tools:sample/lorem" />


    </LinearLayout>

</android.support.v7.widget.CardView>