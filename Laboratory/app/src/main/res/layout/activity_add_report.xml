<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PresciptionActivity">

        <EditText
            android:id="@+id/activity_add_report_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="@string/prescription_title"
            android:inputType="text" />

        <EditText
            android:id="@+id/activity_add_report_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="@string/instruction" />

        <Button

            android:background="@color/colorPrimary"
            android:id="@+id/activity_add_report_title_image_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/choose_pdf" />

        <Button
            android:background="@color/colorPrimaryDark"
            android:id="@+id/activity_add_report_title_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/upload" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>